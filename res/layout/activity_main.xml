<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/TableLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:stretchColumns="0,1,2"
    android:keepScreenOn="true"
    tools:context=".MainActivity" >

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.16" >

        <TextView
            android:id="@+id/textPlayer1Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:clickable="true"
            android:onClick="@string/click_name_1"
            android:text="@string/player_name"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/textPlayer2Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="right"
            android:onClick="@string/click_name_2"
            android:text="@string/player_name"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_weight="0.52">

        <Button
            android:id="@+id/buttonPlayer1"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="@string/click_player_1"
            android:background="@drawable/button_player"
            android:text="@string/game_stop" />

        <Button
            android:id="@+id/buttonPlayer2"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="@string/click_player_2"
            android:background="@drawable/button_player"
            android:text="@string/game_stop" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.16" >

        <TextView
            android:id="@+id/textPlayer1Score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="@string/game_score"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/textPlayerBreak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/game_break" />

        <TextView
            android:id="@+id/textPlayer2Score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="@string/game_score"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_weight="0.16">

        <Button
            android:id="@+id/buttonRed"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="@string/click_red"
            android:background="@drawable/button_red"/>

        <Button
            android:id="@+id/buttonYellow"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="@string/click_yellow"
            android:background="@drawable/button_yellow"/>

        <Button
            android:id="@+id/buttonGreen"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="@string/click_green"
            android:background="@drawable/button_green"/>

        <Button
            android:id="@+id/buttonBrown"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="@string/click_brown"
            android:background="@drawable/button_brown"/>

        <Button
            android:id="@+id/buttonBlue"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="@string/click_blue"
            android:background="@drawable/button_blue"/>

        <Button
            android:id="@+id/buttonPink"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="@string/click_pink"
            android:background="@drawable/button_pink"/>

        <Button
            android:id="@+id/buttonBlack"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="@string/click_black"
            android:background="@drawable/button_black"/>

        <Button
            android:id="@+id/buttonFoul"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="@string/click_foul"
            android:background="@drawable/button_foul"
            android:text="@string/game_foul" />
    </TableRow>

</TableLayout>