<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" android:drawable="@drawable/button_player_clicked">
    </item>
    <item android:state_enabled="false" android:drawable="@drawable/button_player_pressed">
    </item>
    <item>
        <shape android:shape="rectangle">
               <corners android:radius="10dp"/>
			    <gradient 
			        android:startColor="#000"
				    android:centerColor="#636363"
				    android:endColor="#969696"
				    android:type="sweep"
					android:centerX="0"
					android:centerY="0.95"/>
			    <stroke android:width="1sp" android:color="#636363"/>
        </shape>
    </item>
</selector>
